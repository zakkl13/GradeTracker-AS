<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gradesapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
    <instrumentation android:targetPackage="com.example.gradesapp"
        android:name="android.test.InstrumentationTestRunner">
    </instrumentation>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GradeCalculatorActivity"
            android:label="@string/title_activity_grade_calculator" >
        </activity>
        <activity
            android:name=".AddGradesActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name=".ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:label="@string/title_activity_add_class" >
        </activity>
        <activity
            android:name=".ClassDisplayActivity"
            android:label="@string/title_activity_class_display" >
        </activity>
        <activity
            android:name=".AddCategoryActivity"
            android:label="@string/title_activity_add_assignment_weight" >
        </activity>
    </application>

</manifest>
