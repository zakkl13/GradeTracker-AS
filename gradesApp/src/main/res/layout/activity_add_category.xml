<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gradesapp.AddClassActivity" >

    <EditText
        android:id="@+id/ptsRcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clsName"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="i.e. Test" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/percent"
        android:layout_marginBottom="68dp"
        android:layout_marginRight="27dp" >
    </RadioGroup>

    <Button
        android:id="@+id/catAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/curGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:onClick="catAdd"
        android:text="Add Category" />

    <EditText
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/catAdd"
        android:layout_alignLeft="@+id/ptsRcv"
        android:ems="10"
        android:hint="Percentage"
        android:inputType="number" />

    <TextView
        android:id="@+id/curGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/clsName"
        android:layout_marginTop="30dp"
        android:text="Percentage" />

    <TextView
        android:id="@+id/clsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/curGrade"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="Catergory" />

</RelativeLayout>
