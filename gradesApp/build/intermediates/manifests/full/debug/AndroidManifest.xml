<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gradesapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="20"
        android:targetSdkVersion="21" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.example.gradesapp" >
    </instrumentation>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.example.gradesapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gradesapp.GradeCalculatorActivity"
            android:label="@string/title_activity_grade_calculator" >
        </activity>
        <activity
            android:name="com.example.gradesapp.AddGradesActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="com.example.gradesapp.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name="com.example.gradesapp.AddClassActivity"
            android:label="@string/title_activity_add_class" >
        </activity>
        <activity
            android:name="com.example.gradesapp.ClassDisplayActivity"
            android:label="@string/title_activity_class_display" >
        </activity>
        <activity
            android:name="com.example.gradesapp.AddCategoryActivity"
            android:label="@string/title_activity_add_assignment_weight" >
        </activity>
    </application>

</manifest>